<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPerfilActivity"
    android:background="@color/background">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="800dp">

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/email"
            android:textAlignment="center"
            tools:text="Email" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="70dp"
            android:text="@string/DatosPefil"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/nombre"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <TextView
            android:id="@+id/textViewApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/apellido"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <TextView
            android:id="@+id/textViewEmail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/email"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <TextView
            android:id="@+id/textViewDniCif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/NIF"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/domicilio"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <TextView
            android:id="@+id/textViewCp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/cp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/telefono"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/textBoxs"/>

        <Button
            android:id="@+id/buttonAcutalizaPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:text="@string/actualizarPerfil"
            android:backgroundTint="@color/colorBoton"
            />

        <Button
            android:id="@+id/buttonCerrarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/LogOut"
            android:backgroundTint="@color/botonCancelar"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>