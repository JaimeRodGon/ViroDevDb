<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FacturaActivity2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                android:text="@string/NewFactura"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etClienteFra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints="any"
                android:background="@color/textBoxs"
                android:hint="@string/idCliente"
                android:inputType="number|text"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etNumFra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints="none"
                android:background="@color/textBoxs"
                android:hint="@string/NFactura"
                android:inputType="number"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etFechaFactura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints="date"
                android:background="@color/textBoxs"
                android:ems="10"
                android:hint="@string/FechaFactura"
                android:inputType="date"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etDetalleFra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints="any"
                android:background="@color/textBoxs"
                android:hint="@string/detalle"
                android:inputType="text"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etImporteFra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints="none"
                android:background="@color/textBoxs"
                android:hint="@string/importe"
                android:inputType="number"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etIvaFra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints="none"
                android:background="@color/textBoxs"
                android:hint="@string/IVA"
                android:inputType="number"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etTotalFra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:autofillHints="none"
                android:background="@color/textBoxs"
                android:hint="@string/total"
                android:inputType="number"
                android:minHeight="50dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorBoton"
                android:text="@string/guardar" />

            <Button
                android:id="@+id/buttonVerFacturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VER FACTURAS" />

            <Button
                android:id="@+id/buttonCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/botonCancelar"
                android:text="@string/cancel" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>