<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FacturaActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="800dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NewFactura"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:id="@+id/etClienteFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/idCliente"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:inputType="number|text"
            android:autofillHints="any"
            android:background="@color/textBoxs"/>

        <EditText
            android:id="@+id/etNumFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/NFactura"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:autofillHints="none"
            android:background="@color/textBoxs"/>

        <EditText
            android:id="@+id/etFechaFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="date"
            android:ems="10"
            android:hint="@string/FechaFactura"
            android:inputType="date"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@color/textBoxs"/>

        <EditText
            android:id="@+id/etDetalleFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/detalle"
            android:inputType="text"
            android:autofillHints="any"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@color/textBoxs"/>

        <EditText
            android:id="@+id/etImporteFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/importe"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@color/textBoxs"/>

        <EditText
            android:id="@+id/etIvaFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/IVA"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@color/textBoxs"/>

        <EditText
            android:id="@+id/etTotalFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/total"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="25dp"
            android:background="@color/textBoxs"/>


        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorBoton"/>

        <Button
            android:id="@+id/buttonVerFacturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER FACTURAS" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/botonCancelar"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>