<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context=".FacturaActivity">


    <LinearLayout

        android:layout_width="410dp"
        android:layout_height="705dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="800dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/NewFactura"

            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:id="@+id/textViewFechaFra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonModificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/IVA"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:background="@color/textBoxs"/>
            android:text="Modificar fecha" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLIENTE"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinnerArticulos"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorBoton"/>
            android:visibility="invisible" />


        <Button
            android:id="@+id/buttonSiguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/cancel"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/botonCancelar"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>